<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
    </style>
    <style name="viewParent.titleRegister">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/login_bk_color</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
    </style>
    <style name="viewParent.title">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">@dimen/headerTextSize</item>
    </style>

    <style name="viewParent.title.NoMode">
        <item name="android:textColor">@color/contentTextColor</item>
    </style>
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="backgroundTint">@color/primaryTextColor</item>
    </style>

</resources>